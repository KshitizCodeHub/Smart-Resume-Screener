# =============================================================================
# SMART RESUME SCREENER - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and update with your actual values
# Never commit .env file to version control!

# =============================================================================
# MONGODB CONFIGURATION
# =============================================================================
# For local MongoDB (default)
MONGODB_URL=mongodb://localhost:27017

# For MongoDB Atlas (cloud) - use your connection string
# MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/

# Database name (created automatically if doesn't exist)
MONGODB_DB_NAME=resume_screener_db

# =============================================================================
# GOOGLE GEMINI API
# =============================================================================
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# Host address (0.0.0.0 allows external connections)
HOST=0.0.0.0

# Port number (8000 is default)
PORT=8000

# Debug mode (set to False in production)
DEBUG=True

# =============================================================================
# CORS SETTINGS
# =============================================================================
# Comma-separated list of allowed origins (no spaces)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:8000

# =============================================================================
# FILE UPLOAD SETTINGS
# =============================================================================
# Maximum file size in megabytes
MAX_FILE_SIZE_MB=10

# Allowed file extensions (comma-separated, no dots)
ALLOWED_EXTENSIONS=pdf,docx,txt

# =============================================================================
# LLM (AI MODEL) SETTINGS
# =============================================================================
# Gemini model to use
# Options: gemini-1.5-flash, gemini-1.5-pro, gemini-2.5-flash (recommended)
LLM_MODEL=gemini-2.5-flash

# Temperature for AI responses (0.0 = deterministic, 1.0 = creative)
# Range: 0.0 - 1.0 (0.3 recommended for matching tasks)
LLM_TEMPERATURE=0.3

# Maximum tokens for AI response
MAX_TOKENS=2048
